<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UniPiece" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- 상태바의 색상을 바꿔보자 -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.UniPiece" parent="Base.Theme.UniPiece" />

    <!--Bottomnavigation 글자 설정-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <!-- Toolbar Title TextApperance 설정 -->
    <style name="Theme.Title.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="AppTheme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/fourth</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/foreground_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.UniPiece</item>

    </style>

</resources>