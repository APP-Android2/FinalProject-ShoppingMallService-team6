<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mygallery.SalesApplicationActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSalesApplication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextAppearance="@style/Theme.Title.Toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <ImageView
                android:id="@+id/imageViewSalesApplication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_launcher_foreground" />

            <Button
                android:id="@+id/buttonSalesApplicationPictureAdd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_radius"
                android:fontFamily="@font/pretendard_regular"
                android:text="사진 첨부하기"
                android:textColor="@color/white"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconGravity="textStart" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSalesApplicationPieceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="작품 이름"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textFieldSalesApplicationPieceName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/textfield_radius"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="text"
                    android:paddingStart="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSalesApplicationCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:hint="카테고리"
                app:endIconMode="none"
                app:helperText="클릭해서 카테고리를 설정해주세요.">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textFieldSalesApplicationCategory"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/textfield_radius"
                    android:focusable="false"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="none"
                    android:paddingStart="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSalesApplicationPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="가격"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textFieldSalesApplicationPrice"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/textfield_radius"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="number"
                    android:paddingStart="10dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSalesApplicationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="제작 날짜"
                app:endIconMode="none"
                app:helperText="클릭해서 날짜를 설정해주세요.">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textFieldSalesApplicationDate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/textfield_radius"
                    android:focusable="false"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="none"
                    android:paddingStart="10dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSalesApplicationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="작품 설명"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textFieldSalesApplicationDescription"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/textfield_radius"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="text|textMultiLine"
                    android:paddingStart="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonSalesApplicationSubmit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/button_radius"
                android:fontFamily="@font/pretendard_regular"
                android:text="완료"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>